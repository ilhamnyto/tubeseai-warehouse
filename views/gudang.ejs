<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Warehouse | Gudang</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row judul-menu mt-5 ml-5">
        <div class="col">
          <h1>Gudang</h1>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col px-5 d-flex justify-content-end">
          <a
            href="/app/addgudang"
            class="d-flex align-items-center add-btn mr-5"
          >
            Add gudang
          </a>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Location</th>
                  <th>Supervisor</th>
                  <th>Capacity</th>
                  <th>Biaya Sewa</th>
                  <th>Biaya Perawatan</th>
                  <th></th>
                </tr>
              </thead>
              <tbody class="tab-body"></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.querySelector(".tab-body").innerHTML = `
                <tr>
                  <td colspan="7" style="text-align: center">
                    <img src="/loading.gif" alt="" />
                  </td>
                </tr>
                `;
      fetch("/gudang")
        .then((res) => res.json())
        .then((res) => {
          document.querySelector(".tab-body").innerHTML = ``;

          res.forEach((el) => {
            document.querySelector(".tab-body").innerHTML += `
                <tr class="tab-row">
                  <td>${el.id}</td>
                  <td>${el.name}</td>
                  <td class="loc">
                    ${el.location}
                  </td>
                  <td>${el.supervisor}</td>
                  <td>${el.capacity}</td>
                  <td>${el.biaya_sewa}</td>
                  <td>${el.biaya_perawatan}</td>
                  <td>
                    <a href="/app/editgudang/${el.id}" class="edit-btn">
                      <img src="/edit.png" alt="edit" />
                    </a>
                    <button id="del-btn" onclick="deleteValue(event)" value="${el.id}">
                      <img src="/delete.png" alt="delete" />
                    </button>
                    </td>
                </tr>
            `;
          });
        });

      const deleteValue = (e) => {
        fetch(`/gudang/${e.target.value}`, {
          method: "DELETE",
        }).then(async (res) => {
          const response = await res.json();
          console.log(response);
        });
      };
    </script>
  </body>
</html>
